<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">

            <h2 class="mb-3">Form Edit Contact</h2>

            <% if (typeof errors !=='undefined' ) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <% if(typeof contact=='undefined' ) {%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                <span class="sr-only">Close</span>
                            </button>
                            <p>Sorry data not found</p>
                        </div>
                        <a href="/contact/ " class="btn btn-info btn-sm mb-3"> <i class="las la-arrow-circle-left"></i>
                            Back</a>
                        <% } else{ %>
                            <form method="POST" action="/contact?_method=PUT">
                                <input type="hidden" name="_id" value="<%= contact._id %>">
                                <input type="hidden" type="text" name="oldName"
                                    value="<%= contact.oldName || contact.name %>">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" id="name" name="name" required
                                        value="<%= contact.name %>">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" idEmail="email" name="email" required
                                        value="<%= contact.email %>">
                                </div>
                                <div class="form-group">
                                    <label for="phoneNumber">Phone Number</label>
                                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required
                                        value="<%= contact.phoneNumber %>">
                                </div>
                                <button type="submit" class="btn btn-success btn-sm mb-3"> <i
                                        class="las la-plus-circle"></i>
                                    Update
                                    Contact</button>
                                <a href="/contact/<%= contact.name %> " class="btn btn-info btn-sm mb-3"> <i
                                        class="las la-arrow-circle-left"></i>
                                    Back</a>
                            </form>
                            <% } %>


        </div>
    </div>
</div>